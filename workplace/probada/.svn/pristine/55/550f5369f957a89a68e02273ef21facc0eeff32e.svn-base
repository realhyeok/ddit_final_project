<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@ page trimDirectiveWhitespaces="true" %>

<!-- page content -->
<div class="right_col" role="main">
  <!-- 내 작업 바디 시작 -->
  <div class="x_panel">
    <div class="x_content">
      <!-- 제목 시작 -->
      <div class="x_title">
        <h2><i class="glyphicon glyphicon-exclamation-sign"></i>&nbsp;&nbsp;&nbsp;이슈 - 작성</h2>
        <div class="clearfix"></div>
      </div>
      <!-- 제목 끝 -->
      <!-- 이슈 작성 시작 -->
      <form class="form-horizontal form-label-left">
        <div class="form-group row">
          <label class="control-label col-sm-2">제목</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" placeholder="제목을 입력하세요.">
          </div>
        </div>

        <div class="form-group row">
          <label class="control-label col-sm-2">프로젝트명</label>
          <div class="col-sm-10">
            <select class="form-control form-control-sm">
              <option>AA 프로젝트</option>
              <option>BB 프로젝트</option>
              <option>CC 프로젝트</option>
              <option>DD 프로젝트</option>
              <option>EE 프로젝트</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="control-label col-sm-2">중요도</label>
          <div class="col-sm-10">
            <select class="form-control form-control-sm">
              <option>낮음</option>
              <option>보통</option>
              <option>높음</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="control-label col-sm-2 ">작성자</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" placeholder="본인" style="background:white;" readonly>
          </div>
        </div>

        <div class="form-group row">
          <label class="control-label col-sm-2">내용</label>
          <div class="col-sm-10">
            <textarea id="content" name="content" rows="10" class="form-control form-control-sm" placeholder="내용을 입력하세요." style="display:none;">summernote적용 예정?</textarea>
          </div>
        </div>
      </form>

      <div class="form-horizontal form-label-left">
        <div class="form-group row">
          <label class="control-label col-sm-2">첨부파일</label>
          <div class="col-sm-10">
            <form action="form_upload.html" class="dropzone dz-clickable">
              <div class="dz-default dz-message">
                <span>파일을 등록해주세요.</span>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="form-horizontal form-label-left">
        <div class="form-group row">
          <div class="col-md-12 col-sm-12" style="text-align:right;">
            <button type="button" class="btn btn-sm btn-primary">등록</button>
            <button type="button" class="btn btn-sm btn-secondary" onclick="history.go(-1);">취소</button>
          </div>
        </div>
      </div>
      <!-- 이슈 작성 끝 -->
    </div>
  </div>
<!-- 내 작업 바디 끝 -->
</div>
<!-- /page content -->
