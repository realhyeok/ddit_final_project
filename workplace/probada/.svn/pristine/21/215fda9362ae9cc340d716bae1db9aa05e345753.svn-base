<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@ page trimDirectiveWhitespaces="true" %>


<!-- 메일 작성 시작 -->
<form class="form-horizontal form-label-left">
	<div class="col-sm-12">
		<input type="text" class="form-control form-control-sm mt-3" placeholder="받는 사람:">
		<br>
	</div>
	
	<div class="col-sm-12">
		<input type="text" class="form-control form-control-sm" placeholder="제목:">
		<br>
	</div>
	
	<div class="col-sm-12">
		<textarea id="content" name="content" rows="10" class="form-control" placeholder="내용을 입력하세요."></textarea>
		<br>
	</div>
</form>

<div class="form-horizontal form-label-left">
	<div class="col-sm-12">
		<form action="form_upload.html" class="dropzone dz-clickable">
			<div class="dz-default dz-message"">
				<span>파일을 등록해주세요.</span>
			</div>
		</form>
		<br>
	</div>
</div>

<div class="col-sm-12">
	<div class="col-md-12 col-sm-12" style="text-align:right;">
		<button type="button" class="btn btn-sm btn-dark">임시저장</button>
		<button type="button" class="btn btn-sm btn-primary">전송</button>
		<button type="button" class="btn btn-sm btn-secondary" onclick="history.go(-1);">취소</button>
	</div>
</div>
<!-- 메일 작성 끝 -->


<%@ include file="/WEB-INF/views/web-app/my-work/summernote.jsp" %>

<script>
	window.onload = function(){
   		summernote_go($('textarea#content'));
   	}
</script>