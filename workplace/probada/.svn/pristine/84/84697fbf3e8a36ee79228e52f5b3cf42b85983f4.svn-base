<style>
.dashboard-stat {
    display: block;
    margin-bottom: 25px;
    overflow: hidden;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    -ms-border-radius: 4px;
    -o-border-radius: 4px;
    border-radius: 4px;
}

.dashboard-stat {
    display: block;
    margin-bottom: 25px;
    overflow: hidden;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    -ms-border-radius: 4px;
    -o-border-radius: 4px;
    border-radius: 0;
    box-shadow: 0px 1px 15px 1px rgba(69,65,78,0.05);
}

.dashboard-stat::before, .dashboard-stat::after {
    content: " ";
    display: table;
}

.dashboard-stat::after {
    clear: both;
}

.dashboard-stat.grey-cararra {
    background-color: #fafafa;
}

.grey-cararra.dashboard-stat {
    background-color: #fff;
}

.bordered.grey-cararra.dashboard-stat {
    border: 1px solid #eaeaea !important;
}

.dashboard-stat .visual {
    width: 80px;
    height: 80px;
    display: block;
    float: left;
    padding-top: 10px;
    padding-left: 15px;
    margin-bottom: 15px;
    font-size: 35px;
    line-height: 35px;
}

.dashboard-stat .visual {
    margin-bottom: 0px;
    margin-top: -7px;
}

.dashboard-stat .details {
    position: absolute;
    right: 15px;
    padding-right: 15px;
}

.dashboard-stat .more {
    clear: both;
    display: block;
    padding: 6px 10px 6px 10px;
    position: relative;
    text-transform: uppercase;
    font-weight: 300;
    font-size: 11px;
    opacity: 0.7;
    filter: alpha(opacity=70);
}

.dashboard-stat .more {
    text-transform: none;
}

.dashboard-stat.grey-cararra .more {
    color: #333333;
    background-color: #f0f0f0;
}

[class^='m-icon-'] {
    display: inline-block;
    width: 14px;
    height: 14px;
    margin-top: 3px;
    line-height: 14px;
    vertical-align: top;
    background-image: url(../img/syncfusion-icons.png);
    background-position: 0 0;
    background-repeat: no-repeat;
}

.m-icon-swapright {
    background-position: -27px -10px;
}

.m-icon-swapright {
    margin-top: 1px;
}

.dashboard-stat .more > i {
    display: inline-block;
    margin-top: 1px;
    float: right;
}

.font-blue-sharp {
    color: #5c9bd1 !important;
}

.details > h3 {
    margin-bottom: 1px;
}

.bordered.grey-cararra.dashboard-stat h3 {
    font-weight: 400;
    font-size: 35px;
    text-align: right;
}

.noti-desc {
    font-size: 13px;
    color: #aab5bc;
    font-weight: 600;
    text-align: right;
}

.small, small {
    font-size: 85%;
}

.dashboard-stat .visual > i {
    margin-left: -35px;
    font-size: 110px;
    line-height: 110px;
}

.dashboard-stat .visual > i {
    font-size: 80px;
    margin-top: -10px;
}

.dashboard-stat.grey-cararra .visual > i {
    color: #333333;
    opacity: 0.1;
    filter: alpha(opacity=10);
}

</style>

